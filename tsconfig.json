{
  "include": ["src"], // Where to look for files to compile
  "exclude": ["node_modules", "dist", "**/**.test.ts"], // What to ignore when compiling

  "compilerOptions": {
    "outDir": "dist", // Where to put compiled files
    "module": "CommonJS", // How to compile modules
    "target": "ESNext", // What JS version to compile to
    "rootDir": "src", // Where to look for files to compile
    "sourceMap": true, // Generate sourcemaps
    "declaration": true, // Generate type definitions

    "strict": true, // Enable all strict type-checking options
    "noImplicitAny": true, // Disallow `any` types

    "esModuleInterop": true, // Enable `import x from 'y'` syntax
    "experimentalDecorators": true // Enable experimental decorators
  }
}
